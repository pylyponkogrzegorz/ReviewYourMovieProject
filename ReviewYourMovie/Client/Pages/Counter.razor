@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p></p>

<AuthorizeView>
	<Authorized>
		<span>You are authorized as @context.User.Identity.IsAuthenticated @*@context.User.Identity.Name*@</span>
	</Authorized>
	<NotAuthorized>
		<span>You are not authorized man.</span>
	</NotAuthorized>
</AuthorizeView>

@code {
	private int currentCount = 0;

	private void IncrementCount()
	{
		currentCount++;
	}
}
